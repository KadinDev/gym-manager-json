{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <a href="/instructors/create">Novo</a>

        <!-- table = tabela -->
        <table width="100%">
            <!-- thead = cabeçalho -->
            <thead>
                <!-- tr = linha -->
                <tr>
                    <!-- th = coluna -->
                    <th> Instructor </th>
                    <th> Atendimento </th>
                    <th> Ação </th>
                </tr>
            </thead>

            <!-- tbody = é o corpo -->
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <!-- já as colunas no corpo usa-se <td> -->
                        <td> 
                            <span style="background-image: url({{instructor.avatar_url}})" ></span>
                            {{ instructor.name }} 
                        </td>
                        <td> {{ instructor.services }} </td>
                        <td> <a href="/instructors/{{ instructor.id }}"> Ver </a> </td>
                    </tr>
                {% endfor %}

                
            </tbody>
        </table>
       
    </div>

{% endblock content %}